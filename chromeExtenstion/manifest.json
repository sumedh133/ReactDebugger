{
  "manifest_version": 3,
  "name": "React Inspector",
  "version": "1.0",
  "description": "Custom React component debugger",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "devtools_page": "devtools.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_title": "React Inspector"
  }
}
